<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="-14dp">

    <!--출발시간 설정은 일단 보류해뒀습니다-->
    <View
        android:id="@+id/view"
        android:layout_width="416dp"
        android:layout_height="52dp"
        android:background="#594E59"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_Departure"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:hint="출발역"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_Destination"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:hint="도착역"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Departure"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_FindRoot"
        android:layout_width="281dp"
        android:layout_height="73dp"
        android:onClick="onSearchButtonClick"
        android:text="길찾기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="262dp" />

    <TextView
        android:id="@+id/tv_FindResult"
        android:layout_width="319dp"
        android:layout_height="288dp"
        android:layout_marginTop="42dp"
        android:text=" { 길찾기버튼을 누르면 이곳에 최단경로가 표시됩니다 }"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_FindRoot"
        app:layout_constraintVertical_bias="0.078"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_marginBottom="26dp"
        android:text="길찾기 🔍"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>