<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/total_result"
    tools:context=".myroot.MyRootResultActivity">

    <!--이미지 하나로 합쳐서 폰 가로세로 크기 달라지면 텍스트뷰 위치만 수정하면 될 것 같습니다!-->


    <!--상단 출발역명-->
    <TextView
        android:id="@+id/tv_dStation"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="105dp"
        android:text="출발역명"
        android:textSize="15dp"
        android:textColor="#4D3277"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_dStation2"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="332dp"
        android:gravity="center"
        android:text="출발역"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_aStation2"
        android:layout_width="76dp"
        android:layout_height="60dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="332dp"
        android:gravity="center"
        android:text="도착역"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_aStation"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="105dp"
        android:text="도착역명"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#4D3277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!--길찾기 결과창-->
    <TextView
        android:id="@+id/tv_routeResult"
        android:layout_width="234dp"
        android:layout_height="115dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="530dp"
        android:gravity="center"
        android:text="결과창"
        android:textColor="#806DAF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!--뒤로가기버튼-->
    <ImageView
        android:id="@+id/IB_goback"
        android:layout_width="41dp"
        android:layout_height="87dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>